<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#8F2B60">
            </solid>
            <stroke
                android:width="1dp"
                android:color="#662045">
            </stroke>
            <corners
                android:radius="6dp">
            </corners>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp">
            </padding>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#8F2B60"
                android:endColor="#662045"
                android:angle="270">
            </gradient>
            <stroke
                android:width="1dp"
                android:color="#662045">
            </stroke>
            <corners
                android:radius="6dp">
            </corners>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp">
            </padding>
        </shape>
    </item>
</selector>