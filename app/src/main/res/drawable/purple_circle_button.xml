<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid
                android:color="#8f2b60" />
            <stroke
                android:width="1dp"
                android:color="#662045" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="#8f2b60"
                android:endColor="#662045"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#662045" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>