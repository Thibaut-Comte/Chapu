<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.musee.chapu.themes.PageOeuvre"
    android:weightSum="1"
    android:background="@drawable/papier"
    android:id="@+id/cxw">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titre"
        android:id="@+id/titre"
        android:textSize="50dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:id="@+id/imgBio"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="Description 1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:paddingRight="50dp"
        android:layout_alignRight="@+id/audio"
        android:layout_alignEnd="@+id/audio"
        android:layout_alignLeft="@+id/audio"
        android:layout_alignStart="@+id/audio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lecture Audio"
        android:id="@+id/audio"
        android:layout_alignTop="@+id/stop"
        android:layout_centerHorizontal="true"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:paddingRight="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/retour"
        android:paddingRight="100dp"
        style="@style/button_text"
        android:background="@drawable/purple_button"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/chapu_gauche_retour"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/retour"
        android:layout_alignEnd="@+id/retour" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/chapus_face_petit"
        android:layout_alignBottom="@+id/stop"
        android:layout_alignRight="@+id/stop"
        android:layout_alignEnd="@+id/stop" />

</RelativeLayout>
