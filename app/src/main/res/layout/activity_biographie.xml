<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/papier"
    tools:context="org.musee.chapu.biographie.Biographie">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Biographie de Chapu en quelques thÃ¨mes"
        android:id="@+id/titre"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapu et les Beaux Arts"
        android:id="@+id/ba"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:drawableRight="@drawable/mini_chapus_face"
        android:layout_below="@+id/titre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:maxWidth="450dp"
        android:minWidth="450dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Vie Quotidienne au Temps de Chapu"
        android:id="@+id/vie"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:drawableLeft="@drawable/mini_chapus_sculpte"
        android:layout_alignTop="@+id/ba"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:maxWidth="450dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le Sculpteur et La Commande Publique"
        android:id="@+id/cp"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ba"
        android:layout_alignLeft="@+id/ba"
        android:layout_alignStart="@+id/ba"
        android:drawableRight="@drawable/mini_chapus_sculpte"
        android:maxWidth="450dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L&apos;Oeuvre Majeure de Chapu Sur Jeanne d&apos;Arc"
        android:id="@+id/btJeanne"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:layout_alignTop="@+id/cp"
        android:layout_alignRight="@+id/vie"
        android:layout_alignEnd="@+id/vie"
        android:drawableLeft="@drawable/mini_chapus_pense"
        android:maxWidth="450dp" />

</RelativeLayout>
