<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/papier"
    tools:context="org.musee.chapu.biographie.ReglesBio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/regle1"
        android:textSize="30dp"
        android:layout_below="@+id/titre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Règle du jeu"
        android:id="@+id/titre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Je n&apos;ai pas envie de jouer aujourd&apos;hui"
        android:id="@+id/sauter"
        android:layout_alignTop="@+id/jouer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:paddingLeft="120dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commençons à jouer !"
        android:id="@+id/jouer"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/purple_button"
        style="@style/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/regle2"
        android:textSize="30dp"
        android:layout_below="@+id/regle1"
        android:layout_alignLeft="@+id/regle1"
        android:layout_alignStart="@+id/regle1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/regle3"
        android:layout_below="@+id/regle2"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/regle2"
        android:layout_alignStart="@+id/regle2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/mini_chapus_cours_gauche"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/sauter"
        android:layout_alignStart="@+id/sauter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/mini_chapus_cours_droite"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/jouer"
        android:layout_alignEnd="@+id/jouer"
        android:layout_marginBottom="64dp" />

</RelativeLayout>
