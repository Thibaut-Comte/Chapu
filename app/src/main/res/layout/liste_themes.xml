<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/papier"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des thÃ¨mes"
        android:id="@+id/titre"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="357dp"
        android:layout_height="240dp"
        android:id="@+id/mythologie"
        android:src="@drawable/mytho"
        android:layout_weight="0.10"
        android:layout_alignTop="@+id/portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <ImageButton
        android:layout_width="357dp"
        android:layout_height="240dp"
        android:id="@+id/portrait"
        android:src="@drawable/mytho"
        android:layout_alignTop="@+id/grandsHommes"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="357dp"
        android:layout_height="240dp"
        android:id="@+id/grandsHommes"
        android:background="@drawable/papier"
        android:src="@drawable/mytho"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
